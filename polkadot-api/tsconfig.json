{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "target": "esnext",
    "allowJs": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src"]
}
