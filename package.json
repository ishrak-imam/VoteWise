{
  "name": "votewise-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore --fix --ext .ts,.tsx .",
    "prettier": "prettier --write ./src",
    "check-types": "tsc --noEmit",
    "postinstall": "yarn build-polkadot-api",
    "validate": "concurrently \"yarn check-types\" \"yarn lint\"",
    "build-polkadot-api": "cd ./polkadot-api && yarn && yarn build"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^4.4.3",
    "@react-navigation/bottom-tabs": "^6.3.2",
    "@react-navigation/native": "^6.0.11",
    "@react-navigation/native-stack": "^6.7.0",
    "polkadot-api": "./polkadot-api",
    "react": "18.0.0",
    "react-native": "0.69.3",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.5.0",
    "react-native-get-random-values": "^1.8.0",
    "react-native-mmkv": "^2.4.3",
    "react-native-paper": "5.0.0-rc.4",
    "react-native-reanimated": "^2.9.1",
    "react-native-safe-area-context": "^4.3.1",
    "react-native-screens": "^3.15.0",
    "react-native-vector-icons": "^9.2.0",
    "react-native-webview": "^11.23.0",
    "recoil": "^0.7.4",
    "recoil-persist": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.69.3",
    "@types/react-native-vector-icons": "^6.4.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.3.0",
    "eslint": "^7.32.0",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^13.0.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "react-test-renderer": "18.0.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.+(ts|tsx)": "eslint --fix",
    "*.+(ts|tsx|json|js)": "prettier --write"
  }
}
